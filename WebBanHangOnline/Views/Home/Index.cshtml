@model List<WebBanHangOnline.Models.Product>
@{
    ViewData["Title"] = "Trang chủ";
}

<!-- ================= HERO ================= -->
<section class="hero">
    <div class="hero-content">
        <small>XUANBAC</small>
        <h1>Autumn<br />& Winter 2026</h1>
        <a href="#" class="btn-main">MUA NGAY</a>
    </div>
    <img src="/images/hero.jpg" class="hero-img" />
</section>

<!-- ================= WOMEN ================= -->
<section class="section container">
    <div class="row align-items-center">
        <div class="col-lg-5">
            <img src="/images/women-banner.jpg" class="img-fluid">
        </div>
        <div class="col-lg-7">
            <h4 class="section-title"> THỜI TRANG NỮ </h4>
            <div class="row g-4">
                @foreach (var p in Model
                              .Where(x => x.Category != null 
                                          && x.Category.Name == "Đồ Nữ"
                                          && x.IsActive)
                              .Take(6))
                {
                    <div class="col-6 col-md-4">
                        <div class="product-card">
                            <span class="badge hot">HOT</span>
                            <a asp-controller="Product"
                               asp-action="Details"
                               asp-route-id="@p.ProductId"
                               asp-route-slug="@p.Slug">
                                <img src="@p.Thumbnail" />
                            </a>
                            <h6>@p.Name</h6>
                            <div class="price">@p.Price.ToString("N0") đ</div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>


<!-- ================= SALE ================= -->
<section class="sale-box">
    <div class="sale-left">
        <img src="/images/d.jpg">
        <p>Mini backpack</p>
    </div>
    <div class="sale-center">
        <h3>Khuyến mãi giới hạn</h3>
        <h2>50% OFF</h2>
    </div>
    <div class="sale-right">
        <img src="/images/c.jpg">
    </div>
</section>

