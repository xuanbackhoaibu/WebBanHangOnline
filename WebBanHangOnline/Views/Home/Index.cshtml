            <img src="/images/blog3.jpg" class="img-fluid">
            <h6>There is someone standing behind you</h6>
        </div>
    </div>
</section>

<style>
body { background:#f7f7f7; }

/* HERO */
.hero {
    display: flex;
    align-items: center;
    background: #fff;
    padding: 60px;
    margin-top: 120px;   /* 🔥 thêm dòng này */
}

.hero-content { max-width:420px; }
.hero-content h1 { font-size:42px; line-height:1.2; }
.hero-img { width:520px; margin-left:auto; }


/* SECTION */
.section { margin:70px 0; }
.section-title { font-weight:700; margin-bottom:20px; }

/* PRODUCT */
.product-card {
    position:relative;
    background:#fff;
    padding:12px;
    text-align:center;
    border:1px solid #eee;
    transition:.25s;
}
.product-card:hover { transform:translateY(-4px); border-color:#ff6b6b; }
.product-card img { width:100%; height:220px; object-fit:cover; }
.product-card h6 { font-size:14px; margin:10px 0 4px; }
.price { color:#ff6b6b; font-weight:700; }

/* BADGE */
.badge {
    position:absolute;
    top:10px;
    left:10px;
    padding:4px 8px;
    font-size:11px;
    color:#fff;
}
.badge.hot { background:#ff6b6b; }
.badge.sale { background:#ffb703; }

/* SALE BOX */
.sale-box {
    display:flex;
    align-items:center;
    justify-content:space-between;
    background:#fdecec;
    padding:30px;
}

/* TABS */
.tabs { margin:70px 0; }
.tab-head { text-align:center; margin-bottom:20px; }
.tab-head button {
    border:none;
    background:none;
    font-weight:600;
    margin:0 10px;
    cursor:pointer;
}
.tab-head .active { color:#ff6b6b; }

.tab-body { display:none; }
.tab-body.active { display:block; }

/* BLOG */
.blog img { width:100%; }

@@media (max-width: 991px) {
    .hero { flex-direction:column; text-align:center; }
    .hero-img { width:100%; margin:20px 0 0; }
}


</style>

@section Scripts {
<script>
document.querySelectorAll(".tab-btn").forEach(btn => {
    btn.addEventListener("click", () => {
        document.querySelectorAll(".tab-btn").forEach(b => b.classList.remove("active"));
        document.querySelectorAll(".tab-body").forEach(b => b.classList.remove("active"));

        btn.classList.add("active");
        document.getElementById(btn.dataset.tab).classList.add("active");
    });
});
</script>
}
