@page
@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow border-0" style="width: 100%; max-width: 420px;">
        <div class="card-body p-4">

            <!-- Tiêu đề -->
            <h3 class="text-center fw-bold mb-2">Đăng nhập</h3>
            <p class="text-center text-muted mb-4">
                Chào mừng bạn đến với <strong>Web Bán Hàng Online</strong>
            </p>

            <!-- Form login -->
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Email -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email"
                           class="form-control"
                           placeholder="email@example.com"
                           autocomplete="username" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password"
                           class="form-control"
                           placeholder="Mật khẩu"
                           autocomplete="current-password" />
                    <label asp-for="Input.Password">Mật khẩu</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- Remember + Forgot -->
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label" asp-for="Input.RememberMe">
                            Ghi nhớ đăng nhập
                        </label>
                    </div>

                    <a asp-page="./ForgotPassword" class="small">
                        Quên mật khẩu?
                    </a>
                </div>

                <!-- Button -->
                <button type="submit" class="btn btn-primary w-100 mb-3">
                    Đăng nhập
                </button>

                <!-- Register -->
                <div class="text-center">
                    <span class="small">Chưa có tài khoản?</span>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                        Đăng ký ngay
                    </a>
                </div>
            </form>

            <!-- External login (nếu có) -->
            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <hr />
                <div class="text-center">
                    <p class="text-muted mb-2">Hoặc đăng nhập bằng</p>

                    <form asp-page="./ExternalLogin"
                          asp-route-returnUrl="@Model.ReturnUrl"
                          method="post">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit"
                                    class="btn btn-outline-secondary me-2 mb-2"
                                    name="provider"
                                    value="@provider.Name">
                                @provider.DisplayName
                            </button>
                        }
                    </form>
                </div>
            }

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
