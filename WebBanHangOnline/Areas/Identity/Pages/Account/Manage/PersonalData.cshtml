@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Dữ liệu cá nhân";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">

        <div class="alert alert-info">
            <p>
                Tài khoản của bạn có chứa các thông tin cá nhân đã cung cấp cho hệ thống.
            </p>
            <p class="mb-0">
                Bạn có thể tải xuống hoặc yêu cầu xóa toàn bộ dữ liệu này.
            </p>
        </div>

        <div class="alert alert-warning">
            <strong>Cảnh báo:</strong> Việc xóa dữ liệu sẽ
            <strong>xóa vĩnh viễn tài khoản</strong> và
            <strong>không thể khôi phục</strong>.
        </div>

        @* Download *@
        <form asp-page="DownloadPersonalData" method="post" class="mb-3">
            <button type="submit" class="btn btn-primary">
                📥 Tải dữ liệu cá nhân
            </button>
        </form>

        @* Delete *@
        <a asp-page="DeletePersonalData"
           class="btn btn-danger"
           onclick="return confirm('Bạn có chắc chắn muốn xóa tài khoản? Hành động này không thể hoàn tác!');">
            ❌ Xóa tài khoản
        </a>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}