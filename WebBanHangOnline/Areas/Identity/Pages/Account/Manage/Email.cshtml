@page
@model EmailModel
@{
    ViewData["Title"] = "Quản lý Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            @* Email hiện tại *@
            @if (Model.IsEmailConfirmed)
            {
                <div class="mb-3">
                    <label class="form-label">Email hiện tại</label>
                    <div class="input-group">
                        <input class="form-control" value="@Model.Email" disabled />
                        <span class="input-group-text text-success fw-bold">✓</span>
                    </div>
                </div>
            }
            else
            {
                <div class="mb-3">
                    <label class="form-label">Email hiện tại</label>
                    <input class="form-control mb-2" value="@Model.Email" disabled />
                    <button type="submit"
                            asp-page-handler="SendVerificationEmail"
                            class="btn btn-link p-0">
                        Gửi email xác thực
                    </button>
                </div>
            }

            @* Email mới *@
            <div class="form-floating mb-3">
                <input asp-for="Input.NewEmail"
                       class="form-control"
                       autocomplete="email"
                       placeholder="Email mới" />
                <label asp-for="Input.NewEmail">Email mới</label>
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
            </div>

            <button type="submit"
                    asp-page-handler="ChangeEmail"
                    class="w-100 btn btn-primary">
                Cập nhật Email
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
