@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Xóa dữ liệu cá nhân & đóng tài khoản";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="card shadow-sm border-danger">
    <div class="card-body">

        <h4 class="text-danger mb-3">
            @ViewData["Title"]
        </h4>

        <div class="alert alert-danger" role="alert">
            <h6 class="fw-bold mb-2">
                ⚠ CẢNH BÁO NGHIÊM TRỌNG
            </h6>

            <p class="mb-2">
                Hành động này sẽ <strong>xóa vĩnh viễn toàn bộ tài khoản</strong>
                và dữ liệu liên quan của bạn.
            </p>

            <ul class="mb-2">
                <li>Không thể khôi phục tài khoản</li>
                <li>Mất toàn bộ lịch sử đơn hàng</li>
                <li>Mất thông tin cá nhân và bảo mật</li>
            </ul>

            <p class="mb-0">
                Vui lòng cân nhắc kỹ trước khi tiếp tục.
            </p>
        </div>

        <form method="post" id="delete-user">

            <div asp-validation-summary="ModelOnly"
                 class="text-danger mb-3"
                 role="alert">
            </div>

            @if (Model.RequirePassword)
            {
                <div class="form-floating mb-3 col-md-6">
                    <input asp-for="Input.Password"
                           class="form-control"
                           autocomplete="current-password"
                           placeholder="Nhập mật khẩu hiện tại" />
                    <label asp-for="Input.Password">
                        Mật khẩu xác nhận
                    </label>
                    <span asp-validation-for="Input.Password"
                          class="text-danger"></span>
                </div>
            }

            <div class="d-flex gap-2">
                <button type="submit"
                        class="btn btn-danger">
                    Xóa tài khoản vĩnh viễn
                </button>

                <a asp-page="./PersonalData"
                   class="btn btn-outline-secondary">
                    Hủy bỏ
                </a>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
