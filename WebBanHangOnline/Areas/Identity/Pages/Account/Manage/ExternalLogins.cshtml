@page
@model ExternalLoginsModel
@{
    ViewData["Title"] = "Liên kết đăng nhập bên ngoài";
    ViewData["ActivePage"] = ManageNavPages.ExternalLogins;
}

<partial name="_StatusMessage" for="StatusMessage" />

<div class="card shadow-sm">
    <div class="card-body">

        <h4 class="mb-3">
            @ViewData["Title"]
        </h4>

        @* ======= Các đăng nhập đã liên kết ======= *@
        @if (Model.CurrentLogins?.Count > 0)
        {
            <h6 class="fw-bold mb-2">Tài khoản đã liên kết</h6>

            <table class="table align-middle">
                <tbody>
                    @foreach (var login in Model.CurrentLogins)
                    {
                        <tr>
                            <td class="fw-semibold">
                                @login.ProviderDisplayName
                            </td>
                            <td class="text-end">
                                @if (Model.ShowRemoveButton)
                                {
                                    <form asp-page-handler="RemoveLogin"
                                          method="post"
                                          class="d-inline">

                                        <input type="hidden"
                                               name="LoginProvider"
                                               value="@login.LoginProvider" />
                                        <input type="hidden"
                                               name="ProviderKey"
                                               value="@login.ProviderKey" />

                                        <button type="submit"
                                                class="btn btn-outline-danger btn-sm"
                                                title="Gỡ đăng nhập @login.ProviderDisplayName">
                                            Gỡ liên kết
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted">
                                        Không thể gỡ
                                    </span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">
                Bạn chưa liên kết tài khoản đăng nhập bên ngoài nào.
            </p>
        }

        @* ======= Thêm đăng nhập mới ======= *@
        @if (Model.OtherLogins?.Count > 0)
        {
            <hr />

            <h6 class="fw-bold mb-2">
                Liên kết thêm dịch vụ đăng nhập
            </h6>

            <form asp-page-handler="LinkLogin"
                  method="post">

                <div class="d-flex flex-wrap gap-2">
                    @foreach (var provider in Model.OtherLogins)
                    {
                        <button type="submit"
                                class="btn btn-primary"
                                name="provider"
                                value="@provider.Name"
                                title="Đăng nhập bằng @provider.DisplayName">
                            @provider.DisplayName
                        </button>
                    }
                </div>
            </form>
        }
        else
        {
            <p class="text-muted mt-3">
                Không có dịch vụ đăng nhập bên ngoài nào khả dụng.
            </p>
        }

    </div>
</div>
