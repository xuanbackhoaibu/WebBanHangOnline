        </div>
    </div>
</nav>

<div class="container-fluid">
    <div class="row">

        <!-- SIDEBAR -->
        <div class="col-2 admin-sidebar p-3">
            <ul class="nav flex-column">

                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Dashboard" ? "active" : "")"
                       asp-area="Admin"
